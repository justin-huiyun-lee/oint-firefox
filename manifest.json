{
  "manifest_version": 2,
  "name": "oint",
  "version": "1.0",
  "description": "Make all links open in a new tab.",
  "permissions": ["activeTab", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/oint-firefox-logo.png",
      "48": "assets/oint-firefox-logo.png",
      "128": "assets/oint-firefox-logo.png"
    }
  },
  "icons": {
    "16": "assets/oint-firefox-logo.png",
    "48": "assets/oint-firefox-logo.png",
    "128": "assets/oint-firefox-logo.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "oint@5nsou.woah"
    }
  }
}
